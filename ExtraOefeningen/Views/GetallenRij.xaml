<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viemodel="clr-namespace:ExtraOefeningen.ViewModels"
             x:Class="ExtraOefeningen.Views.GetallenRij"
             Title="{Binding Title}">
    
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Label Text="Geef een getal: " VerticalTextAlignment="Center"></Label>
            <Entry Text="{Binding Getal}"></Entry>
        </HorizontalStackLayout>
        <HorizontalStackLayout Spacing="10">
            <Button Text="Getal toevoegen" Command="{Binding GetalToevoegenCommand}" WidthRequest="200"></Button>
            <Button Text="Rij leegmaken" Command="{Binding RijLeegmakenCommand}" WidthRequest="200"></Button>
        </HorizontalStackLayout>
        
        <Label Text="{Binding Kleinste, StringFormat='Kleinste getal {0}'}"></Label>
        <Label Text="{Binding Grootste, StringFormat='Grootste getal {0}'}"></Label>
        <Label Text="Rij:"></Label>
        <CollectionView ItemsSource="{Binding Rij}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding}"></Label>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
    
</ContentPage>