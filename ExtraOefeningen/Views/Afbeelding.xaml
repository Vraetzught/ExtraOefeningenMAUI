<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExtraOefeningen.Views.Afbeelding"
             Title="{Binding Title}">
    
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Label Text="{Binding Getal, StringFormat='Selecteer een getal: {0}'}" VerticalTextAlignment="Center"></Label>
            <Stepper Value="{Binding Getal}" Minimum="1" Maximum="5" Increment="1"></Stepper>
        </HorizontalStackLayout>
        <Button Text="Toon afbeelding" Command="{Binding ToonAfbeeldingCommand}" WidthRequest="200" HorizontalOptions="Start"></Button>
        <Image Source="{Binding Afbeelding}" Aspect="AspectFit" WidthRequest="300" HorizontalOptions="Start"></Image>
    </VerticalStackLayout>
</ContentPage>