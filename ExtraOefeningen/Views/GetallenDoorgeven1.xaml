<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ExtraOefeningen.ViewModels"
             x:DataType="viewmodel:GetallenDoorgeven1ViewModel"
             x:Class="ExtraOefeningen.Views.GetallenDoorgeven1">
    <VerticalStackLayout Spacing="10">
        <HorizontalStackLayout Spacing="10">
            <Label Text="{Binding Getal1, StringFormat='Getal 1:   {0}'}"></Label>
            <Stepper Value="{Binding Getal1, Mode=TwoWay}" Minimum="-100" Maximum="100"></Stepper>
        </HorizontalStackLayout>
        <HorizontalStackLayout Spacing="10">
            <Label Text="{Binding Getal2, StringFormat='Getal 2:   {0}'}" VerticalOptions="Center"></Label>
            <Stepper Value="{Binding Getal2, Mode=TwoWay}" Minimum="-100" Maximum="100" VerticalOptions="Center"></Stepper>
        </HorizontalStackLayout>
        <Button Text="Doorgeven" Command="{Binding DoorgevenCommand}" HorizontalOptions="Start" WidthRequest="300"></Button>
    </VerticalStackLayout >
</ContentPage>