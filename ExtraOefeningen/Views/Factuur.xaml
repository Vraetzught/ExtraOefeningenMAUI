<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExtraOefeningen.Views.Factuur"
             Title="{Binding Title}">
    
    <ScrollView Padding="5">
        <Grid ColumnDefinitions="300, 100, 100, auto"
              ColumnSpacing="5"
              RowDefinitions="*, *, *, *, *, *, *">
            
            <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                <Label Text="Productnaam" VerticalTextAlignment="End"></Label>
                <Entry Text="{Binding Productnaam}"></Entry>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                <Label Text="Prijs" VerticalTextAlignment="End"></Label>
                <Entry Text="{Binding ProductPrijs}"></Entry>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="0" Grid.Column="2">
                <Label Text="Aantal" VerticalTextAlignment="End"></Label>
                <Entry Text="{Binding ProductAantal}"></Entry>
            </VerticalStackLayout>
            <Button Text="Product toevoegen" Command="{Binding ProductToevoegenCommand}" Grid.Row="0" Grid.Column="3"></Button>
            
            
        </Grid>
        
    </ScrollView>
    
</ContentPage>